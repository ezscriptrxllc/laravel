name: Semantic Tag

on:
  push:
    branches: [ 'main' ]

  workflow_run:
    workflows: ["CI/CD"]
    type:
      - complete

  workflow_dispatch:

jobs:
  tagging:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      - uses: codfish/semantic-release-action@v2
        with:
          branches: |
            [
              '+([0-9])?(.{+([0-9]),x}).x',
              'main',
              'next',
              'next-major',
              {
                name: 'beta',
                prerelease: true
              },
              {
                name: 'alpha',
                prerelease: true
              }
            ]
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      - name: Get the version
        id: get_version
        run: echo ::set-output name=VERSION::$RELEASE_VERSION

      - name: Post to Jira webhook
        if: $NEW_RELEASE_PUBLISHED == 'true'
        run: |
          curl -X POST -H 'Content-type: application/json' \
          -d '{"tag":"'"$RELEASE_VERSION"'"}' \
          ${{ secrets.JIRA_PUBLISHED_RELEASE }}
#          -d '{"tag":"${{ steps.get_version.outputs.VERSION }}"}' \
